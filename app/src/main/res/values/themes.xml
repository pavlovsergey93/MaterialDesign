<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">?colorTheme_400</item>
        <item name="android:navigationBarColor">?colorTheme_500</item>
        <item name="colorPrimary">?colorTheme_600</item>
        <item name="colorOnPrimary">?colorTheme_50</item>
        <item name="colorPrimaryContainer">?colorTheme_100</item>
        <item name="colorOnPrimaryContainer">?colorTheme_900</item>
        <item name="colorPrimaryInverse">?colorTheme_200</item>
        <item name="colorSecondary">?colorTheme_600</item>
        <item name="colorOnSecondary">?colorTheme_50</item>
        <item name="colorSecondaryContainer">?colorTheme_100</item>
        <item name="colorOnSecondaryContainer">?colorTheme_900</item>
        <item name="colorTertiary">?colorTheme_600</item>
        <item name="colorOnTertiary">?colorTheme_50</item>
        <item name="colorTertiaryContainer">?colorTheme_100</item>
        <item name="colorOnTertiaryContainer">?colorTheme_900</item>

        <!-- todo хирургическое применение стилей для всех однотипных View -->
        <item name="bottomAppBarStyle">@style/myBottomAppBar</item> <!-- изменение стиля BottomAppBar -->
        <!--        <item name="floatingActionButtonStyle">@style/myFabBottomAppBar</item> &lt;!&ndash; измененич стиля FAB &ndash;&gt;-->
        <!--        <item name="chipStyle">@style/myChipsStyle</item> &lt;!&ndash; измененич стиля Chips &ndash;&gt;-->
        <item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
    </style>

    <style name="Base.Theme.MaterialDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.MaterialDesign.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.MaterialDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>